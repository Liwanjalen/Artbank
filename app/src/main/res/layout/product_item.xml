<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Image of the painting -->
        <ImageView
            android:id="@+id/painting_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/pic1" />

        <!-- Title of the painting -->
        <TextView
            android:id="@+id/painting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Painting Title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Artist's name -->
        <TextView
            android:id="@+id/artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artist Name"
            android:textSize="14sp" />

        <!-- Description of the painting -->
        <TextView
            android:id="@+id/painting_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of the painting goes here. Provide details about the artwork, its style, and inspiration."
            android:textSize="16sp" />

        <!-- Price of the painting -->
        <TextView
            android:id="@+id/painting_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: $199.99"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Buy button or action -->
        <Button
            android:id="@+id/buy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:text="Buy Now"
            android:textSize="16sp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>